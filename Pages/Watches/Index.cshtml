@page "/"
@model Watchmasters.Pages.Watches.IndexModel

@{
    ViewData["Title"] = "Watches";
}

<h1 style="border:double; border-color:blue; background-color:darkgoldenrod">Watches</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table style="background-color:ghostwhite" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].RefNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watch[0].Store)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Watch) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
