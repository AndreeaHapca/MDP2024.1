@page
@model Watchmasters.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
}

<h1 style="border:double; border-color:blue; background-color:cornflowerblue">Clients</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table style="background-color:ghostwhite" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].PhoneNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].LastPurchase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].PrefStore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastPurchase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrefStore.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
