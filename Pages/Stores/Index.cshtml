@page
@model Watchmasters.Pages.Stores.IndexModel

@{
    ViewData["Title"] = "Stores";
}

<h1 style="border:double; border-color:blue; background-color:chocolate">Stores</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table style="background-color:ghostwhite" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Store) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
